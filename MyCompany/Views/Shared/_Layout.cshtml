<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <base href="/">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Angular")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="row body-content">
            <div class="navbar-header col-lg-2">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My Company", "Index", "Dashboard", new { area = "" }, new { @class = "navbar-brand", style="color:white;font-weight:600" })
            </div>
            <div id="div_campaignchosen" class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="row body-content">
        @RenderBody()
        <app-root></app-root>
    </div>
    <div class="row body-content">
        
    </div>
    <div class="container body-content">        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Angular")
    @RenderSection("scripts", required: false)
    <script>
        $(function ()
        {
            $.post("/Dashboard/GetChosenCampaign", function (data) {
                var html = "<ul class='nav navbar-nav' style='padding-top:8px'>";
                html += "<li><a href=/Home>" + data + "</a></li>";
                html += "</ul>";
                $("#div_campaignchosen").append(html);
            });
        });
    </script>    
</body>
</html>
